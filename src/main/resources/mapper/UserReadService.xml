<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dabang.star.cafe.infrastructure.mybatis.readservice.UserReadService">
    <select id="findById" resultType="dabang.star.cafe.application.data.UserData">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="findByEmail" resultType="dabang.star.cafe.application.data.UserData">
        SELECT * FROM users WHERE email = #{email}
    </select>
</mapper>